<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/nba_white">
    <View
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@color/nba_light_grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="36.0dip"
        >

        <TextView
            android:id="@+id/item_game_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />

        <TextView
            android:id="@+id/item_game_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_game_title_center" />

        <TextView
            android:id="@+id/item_game_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_game_title_center" />
        <TextView
            android:id="@+id/item_game_title_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_game_title_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/nba_light_grey" />

    <TextView
        android:id="@+id/item_game_text_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5.0dip"
        android:layout_toLeftOf="@id/item_game_title_center"
        android:textColor="@color/nba_deep_grey"
        android:textSize="12.0sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/item_game_relativeLayout00"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@color/nba_white">

        <RelativeLayout
            android:id="@+id/item_game_relativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_game_image_left"
                android:layout_width="65.0dip"
                android:layout_height="65.0dip"
                android:src="@drawable/match_team_logo_loading130_130px" />

            <ImageView
                android:id="@+id/item_game_image_right"
                android:layout_width="65.0dip"
                android:layout_height="65.0dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/match_team_logo_loading130_130px" />

            <View
                android:id="@+id/item_view_center"
                android:layout_width="1.0dip"
                android:layout_height="15.0dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/nba_light_grey" />

            <TextView
                android:id="@+id/item_game_text_score_left"
                android:layout_width="70.0dip"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="15.0dip"
                android:layout_toLeftOf="@id/item_view_center"
                android:gravity="right"
                android:paddingRight="5.0dip"
                android:textSize="30.0sp" />

            <TextView
                android:id="@+id/item_game_text_score_right"
                android:layout_width="70.0dip"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15.0dip"
                android:layout_toRightOf="@id/item_view_center"
                android:gravity="left"
                android:paddingLeft="5.0dip"
                android:textSize="30.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_game_text_left_name"
            android:layout_width="65.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_game_relativeLayout01"
            android:layout_marginTop="8.0dip"
            android:gravity="center"
            android:text="123"
            android:textColor="@color/nba_dark_grey"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/item_game_text_right_name"
            android:layout_width="65.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_game_relativeLayout01"
            android:layout_marginTop="8.0dip"
            android:gravity="center"
            android:text="123"
            android:textColor="@color/nba_dark_grey"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/item_game_text_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_game_relativeLayout01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8.0dip"
            android:textColor="@color/nba_deep_grey"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="9.0dip"
        android:background="@color/nba_light_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_game_relativelayout_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_btn_gamelist_item">

            <TextView
                android:id="@+id/item_game_text_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/match_icon_boxscore"
                android:drawablePadding="5.0dip"
                android:gravity="center"
                android:text="技术统计"
                android:textColor="@color/colorAccent"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/nba_light_grey" />

        <RelativeLayout
            android:id="@+id/item_game_relativelayout_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_btn_gamelist_item">

            <TextView
                android:id="@+id/item_game_text_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/match_icon_play_by_play"
                android:drawablePadding="5.0dip"
                android:gravity="center"
                android:text="图文直播"
                android:textColor="@color/colorAccent"
                android:textSize="15.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@color/nba_light_grey" />
</LinearLayout>